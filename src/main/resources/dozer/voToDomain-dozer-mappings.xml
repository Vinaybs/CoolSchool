<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
            http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<!-- Mapping domain objects to value objects. -->

	<mapping map-null="true">
		<class-a>com.onlineForum.application.presentation.value.UserVO</class-a>
		<class-b>com.onlineForum.application.persistence.domain.User</class-b>

		<field>
			<a>userAddresses</a>
			<b>userAddresses</b>
			<a-hint>com.onlineForum.application.presentation.value.AddressVO</a-hint>
			<b-hint>com.onlineForum.application.persistence.domain.Address</b-hint>
		</field>
		<field>
			<a>userContacts</a>
			<b>userContacts</b>
			<a-hint>com.onlineForum.application.presentation.value.ContactVO</a-hint>
			<b-hint>com.onlineForum.application.persistence.domain.Contact</b-hint>
		</field>
	</mapping>

</mappings>